{
  "name": "steam-current-game",
  "version": "1.0.0",
  "description": "Display current game being played (via Steam)",
  "scripts": {
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": "https://github.com/j4ckofalltrades/steam-current-game",
  "author": "Jordan Duabe",
  "dependencies": {
    "@j4ckofalltrades/steam-webapi-ts": "^1.0.2",
    "@vercel/node": "^1.13.0",
    "axios": "^0.26.0",
    "dotenv": "^16.0.0",
    "typescript": "^4.6.2",
    "vercel": "^24.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "never"
      ]
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "prettier --write src"
    ]
  }
}
